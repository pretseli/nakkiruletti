        <script>
        var amount = 3;
        function startRoulette() {

            console.log(amount)
            //choose the target angle, that will be choosen
            var chosen = Math.round(Math.random()*(amount - 1) + 1);
            var rotation = (360/amount) * (chosen - 1) + 360*7;
            
            console.log(chosen);

            $("#nakki").transition({easing: "easeOutExpo", rotate: "+="+rotation+"deg", duration: 7000});        
        }
        function drawParticipants() {
            
        }

        $(document).ready(function() {
            $("#start").click(function() {
                startRoulette();  
            });
            $("#amount").change(function() {
                drawParticipants($(this).val());
            });

        });
        </script>

